
.personal-top {
	color: #FFFFFF;
	font-size: 15px;
}
.img-box {
	padding: 0 1px;
}
.img {
	width: 100%;
	height: 120px;
}
.head {
	position: relative;
}
.head-img {
	position: absolute;
	top: -48px;
	left: 16px;
	width: 64px;
	height: 64px;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	border: 4px solid #000000;
}
.information {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.information-tools {
	-webkit-align-self: flex-start;
	        align-self: flex-start;
	margin: 0 0 8px 120px;
}
.editInformation {
	background-color: #333333;
	line-height: 40px;
	line-height: 40px;
	width: 120px;
	text-align: center;
	-webkit-border-radius: 4px;
	        border-radius: 4px;
}
.information-detail {
	padding: 0 16px;
}
.name {
	font-size: 20px;
}
.line {
	border-top: 1px solid #222222;
}
.interval {
	line-height: 32px;
}
.label {
	font-size: 10px;
	display: inline-block;
	line-height: 20px;
	padding: 0px 8px;
	background-color: #333333;
	-webkit-border-radius: 5%;
	        border-radius: 5%;
	/* 此处还有更好的方法 */
	margin-right: 10px;
}
.category {
	color: #999999;
	margin-right: 8px;
}
.iconxiangji {
	line-height: 40px;
	background-color: #333333;
	-webkit-border-radius: 4px;
	        border-radius: 4px;
	text-align: center;
	margin-top: 4px;
}
.tabs {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.tabs>view {
	color: #999999;
	line-height: 32px;
	width: 33%;
	text-align: center;
}
.tabChoosed {
	border-bottom: 2px solid #F0AD4E;
}




