
.descriptionContainer {
	width: 120px;
	position: absolute;
	bottom: 50px;
	left: 10px;
	color: #FFFFFF;
	font-size: 15px;
}
.author {
	line-height: 30px;
}
.title {
	font-size: 12px;
	line-height: 15px;
}
.music {
	font-size: 12px;
	line-height: 30px;
	white-space: nowrap;
	width: 100px;
	overflow: hidden;
}
.music>view {
	-webkit-animation: move 4s linear .25s infinite;
	        animation: move 4s linear .25s infinite;
	width: 150px;
}

/* 文字移动动画  也可以用百分比 */
@-webkit-keyframes move{
from{
		-webkit-transform: translateX(70%);
		        transform: translateX(70%);
}
to{
		-webkit-transform: translateX(-70%);
		        transform: translateX(-70%);
}
}
@keyframes move{
from{
		-webkit-transform: translateX(70%);
		        transform: translateX(70%);
}
to{
		-webkit-transform: translateX(-70%);
		        transform: translateX(-70%);
}
}


