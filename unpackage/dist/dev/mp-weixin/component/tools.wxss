
.tools {
	width: 50px;
	text-align: center;
	color: #FFFFFF;
	font-size: 15px;
	position: absolute;
	right: 10px;
	bottom: 50px;
}
.uploaderInfo {
	position: relative;
}
.img {
	width: 36px;
	height: 36px;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.headIcon {
	border: 1px solid #FFFFFF;
}
.concern {
	background-color: #ff0000;
	color: #FFFFFF;
	width: 16px;
	height: 16px;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	position: absolute;
	left: 17px;
	bottom: -5px;
}
.operation {
	margin-top: 15px;
	font-size: 20px;
}
.number {
	font-size: 10px;
}
.disc {
	width: 38px;
	height: 38px;
	margin: 0 auto;
	margin-top: 15px;
	-webkit-animation: spin 2s linear 0.25s infinite;
	        animation: spin 2s linear 0.25s infinite;
}
.share {
	width: 100%;
	height: 100%;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}

/* 碟片选装动画 */
@-webkit-keyframes spin{
from{
		-webkit-transform: rotate(0);
		        transform: rotate(0);
}
to{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes spin{
from{
		-webkit-transform: rotate(0);
		        transform: rotate(0);
}
to{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}


